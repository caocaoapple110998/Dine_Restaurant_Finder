<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ln_trum_favourites"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:background="@color/colorBackground_custom1"
            android:text="Saved"
            android:gravity="center"
            android:id="@+id/txt_save_favourites"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/color_ChuDao"
            android:text="Favourites"
            android:gravity="center"
            android:id="@+id/txt_favourites_favourites"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/colorBackground_custom1"
            android:text="History"
            android:gravity="center"
            android:id="@+id/txt_history_favourites"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/colorBackground_custom1"
            android:text="Following"
            android:gravity="center"
            android:id="@+id/txt_following_favourites"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/colorBackground_custom1"
            android:text="Logout"
            android:gravity="center"
            android:id="@+id/txt_logout_favourites"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ln_favourites"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_favouirites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


        <TextView
            android:drawableRight="@drawable/adddocument"
            android:background="@color/colorBackground_custom1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:text="Create new favouirites list" />


    </LinearLayout>
</LinearLayout>