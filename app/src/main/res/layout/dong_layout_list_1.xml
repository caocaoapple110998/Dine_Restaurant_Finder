<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <ImageView
        android:id="@+id/img_item_layout_list1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/anhdep" />

    <TextView
        android:id="@+id/txt_view_detail_item_list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:drawableRight="@drawable/icons_arrow"
        android:text="VIEW DETAIL "
        android:textSize="12sp"
        android:textColor="@color/color_detail"
        app:layout_constraintEnd_toEndOf="@+id/txt_diachi_item_list1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_diachi_item_list1"
        app:layout_constraintTop_toBottomOf="@+id/txt_diachi_item_list1" />

    <TextView
        android:id="@+id/txt_diachi_item_list1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="45 W.Lincol St. Morganton, NY, 218864"
        android:textColor="@color/color_address_list1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_located_item_list1"
        app:layout_constraintTop_toBottomOf="@+id/txt_located_item_list1" />

    <TextView
        android:id="@+id/txt_located_item_list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="LOCATED AT -"
        android:textColor="@color/color_located_list1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar_item_list1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ratingBar_item_list1"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar_item_list1" />

    <RatingBar
        android:id="@+id/ratingBar_item_list1"
        style="@style/MytomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:numStars="5"
        android:rating="3"
        app:layout_constraintEnd_toEndOf="@+id/txt_tieude_item_list1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_tieude_item_list1"
        app:layout_constraintTop_toBottomOf="@+id/txt_tieude_item_list1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_tieude_item_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="5 time awarded - the start queen hotel"
        android:textAllCaps="true"
        android:textColor="#212121"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_item_layout_list1"
        app:layout_constraintStart_toStartOf="@+id/img_item_layout_list1"
        app:layout_constraintTop_toBottomOf="@+id/img_item_layout_list1" />
</android.support.constraint.ConstraintLayout>