<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/txttieude_newlis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/imghinh_newlist"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:paddingRight="10dp"
        android:text="Tieu De"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imghinh_newlist"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtngay_newlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txttieude_newlis"
        android:layout_marginTop="8dp"
        android:text="2nd july 2017"
        app:layout_constraintEnd_toEndOf="@+id/txttieude_newlis"
        app:layout_constraintStart_toStartOf="@+id/txttieude_newlis"
        app:layout_constraintTop_toBottomOf="@+id/txttieude_newlis" />


    <ImageView
        android:id="@+id/imghinh_newlist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/anhdep"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06999999" />

    <TextView
        android:id="@+id/txtnoidung_newlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtngay_newlist"
        android:layout_below="@+id/imghinh_newlist"
        android:layout_marginTop="8dp"
        android:text="1231231231231231231231313"
        app:layout_constraintEnd_toEndOf="@+id/txtngay_newlist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtngay_newlist"
        app:layout_constraintTop_toBottomOf="@+id/txtngay_newlist" />

</android.support.constraint.ConstraintLayout>