<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/txttieude_newlis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="Tieu De"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/txtngay_newlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txttieude_newlis"
        android:layout_marginTop="10dp"
        android:text="2nd july 2017" />


    <ImageView
        android:id="@+id/imghinh_newlist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/txtnoidung_newlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtngay_newlist"
        android:layout_below="@+id/imghinh_newlist"
        android:layout_marginTop="10dp"
        android:text="1231231231231231231231313" />

</RelativeLayout>